{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "target": "es5",
    "declaration": false,

    "sourceMap": true,
    "module": "es2015",
    "moduleResolution": "node",

    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,

    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "downlevelIteration": true,

    "lib": [
      "es2017",
      "es2018",
      "ESNext",
      "DOM"
    ],

    "typeRoots": [
      "node_modules/@types"
    ],
  }
}
